<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:LombdaAgentMAUI"
             xmlns:models="clr-namespace:LombdaAgentMAUI.Core.Models;assembly=LombdaAgentMAUI.Core"
             x:Class="LombdaAgentMAUI.MainPage"
             Title="LombdaAgent Chat">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <!-- Header with agent selection -->
        <Grid Grid.Row="0" BackgroundColor="{AppThemeBinding Light=#F0F0F0, Dark=#2D2D2D}" Padding="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            
            <Picker x:Name="AgentPicker" 
                    Grid.Column="0"
                    Title="Select an Agent"
                    SelectedIndexChanged="OnAgentSelected"
                    HorizontalOptions="FillAndExpand" />
            
            <Button x:Name="CreateAgentButton"
                    Grid.Column="1"
                    Text="Create Agent"
                    Clicked="OnCreateAgentClicked"
                    Margin="5,0,0,0" />
            
            <Button x:Name="RefreshButton"
                    Grid.Column="2"
                    Text="Refresh"
                    Clicked="OnRefreshClicked"
                    Margin="5,0,0,0" />
        </Grid>

        <!-- Main content area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Chat area -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Chat messages -->
                <Border Grid.Row="0" 
                        BackgroundColor="{AppThemeBinding Light=White, Dark=#1C1C1C}"
                        Stroke="{AppThemeBinding Light=#E0E0E0, Dark=#404040}"
                        StrokeThickness="1"
                        Margin="10">
                    <CollectionView x:Name="ChatCollectionView"
                                    BackgroundColor="Transparent"
                                    Margin="10">
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="models:ChatMessage">
                                <Grid Margin="0,5">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    
                                    <Label Grid.Row="0"
                                           Text="{Binding DisplayTime}"
                                           FontSize="10"
                                           TextColor="{AppThemeBinding Light=Gray, Dark=LightGray}"
                                           HorizontalOptions="{Binding IsUser, Converter={StaticResource BoolToLayoutOptionsConverter}}" />
                                    
                                    <Border Grid.Row="1"
                                            BackgroundColor="{Binding IsUser, Converter={StaticResource BoolToColorConverter}}"
                                            StrokeThickness="0"
                                            Padding="10,5"
                                            Margin="0,2"
                                            HorizontalOptions="{Binding IsUser, Converter={StaticResource BoolToLayoutOptionsConverter}}">
                                        <Border.StrokeShape>
                                            <RoundRectangle CornerRadius="10" />
                                        </Border.StrokeShape>
                                        <Label Text="{Binding Text}"
                                               TextColor="{Binding IsUser, Converter={StaticResource BoolToTextColorConverter}}"
                                               FontSize="14" />
                                    </Border>
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </Border>

                <!-- Input area -->
                <Grid Grid.Row="1" Margin="10,0,10,10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0"
                            BackgroundColor="{AppThemeBinding Light=White, Dark=#1C1C1C}"
                            Stroke="{AppThemeBinding Light=#E0E0E0, Dark=#404040}"
                            StrokeThickness="1">
                        <Editor x:Name="MessageEditor"
                                Placeholder="Type your message..."
                                MinimumHeightRequest="80"
                                MaximumHeightRequest="120"
                                Margin="10"
                                BackgroundColor="Transparent" />
                    </Border>

                    <Grid Grid.Row="1" Margin="0,5,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <CheckBox x:Name="StreamingCheckBox"
                                  Grid.Column="0"
                                  IsChecked="True"
                                  HorizontalOptions="Start" />
                        <Label Grid.Column="0"
                               Text="Stream responses"
                               VerticalOptions="Center"
                               Margin="30,0,0,0" />

                        <Button x:Name="ClearButton"
                                Grid.Column="1"
                                Text="Clear"
                                Clicked="OnClearClicked"
                                Margin="5,0" />

                        <Button x:Name="SendButton"
                                Grid.Column="2"
                                Text="Send"
                                Clicked="OnSendClicked"
                                BackgroundColor="{AppThemeBinding Light=#512BD4, Dark=#512BD4}"
                                TextColor="White"
                                Margin="5,0,0,0" />
                    </Grid>
                </Grid>
            </Grid>

            <!-- System logs area -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Label Grid.Row="0"
                       Text="Agent List"
                       FontAttributes="Bold"
                       Margin="10,10,10,5" />

                <Border Grid.Row="1"
                        BackgroundColor="{AppThemeBinding Light=White, Dark=#1C1C1C}"
                        Stroke="{AppThemeBinding Light=#E0E0E0, Dark=#404040}"
                        StrokeThickness="1"
                        Margin="10,0,10,10">
                    <CollectionView x:Name="AgentListView"
                                    BackgroundColor="Transparent"
                                    Margin="10">
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="{x:Type x:String}">
                                <Grid Margin="0,2">
                                    <Label Text="{Binding .}"
                                           FontSize="12"
                                           TextColor="{AppThemeBinding Light=Black, Dark=White}" />
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </Border>

                <Label Grid.Row="2"
                       Text="System Logs"
                       FontAttributes="Bold"
                       Margin="10,10,10,5" />

                <Border Grid.Row="3"
                        BackgroundColor="{AppThemeBinding Light=White, Dark=#1C1C1C}"
                        Stroke="{AppThemeBinding Light=#E0E0E0, Dark=#404040}"
                        StrokeThickness="1"
                        Margin="10,0,10,10">
                    <ScrollView x:Name="LogScrollView">
                        <Label x:Name="SystemLogLabel"
                               FontSize="10"
                               TextColor="{AppThemeBinding Light=Gray, Dark=LightGray}"
                               Margin="10"
                               Text="System logs will appear here..." />
                    </ScrollView>
                </Border>
            </Grid>
        </Grid>

        <!-- Loading indicator -->
        <Grid x:Name="LoadingOverlay"
              Grid.RowSpan="2"
              BackgroundColor="#80000000"
              IsVisible="False">
            <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
                <ActivityIndicator IsRunning="True" Color="White" />
                <Label Text="Processing..." TextColor="White" HorizontalOptions="Center" />
            </StackLayout>
        </Grid>
    </Grid>

</ContentPage>
